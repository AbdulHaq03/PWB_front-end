    <form action="/create_user" method="get">
        <h2 style="color:rgb(106, 250, 224);">Sign Up </h2>

		<label for="username" style="color: rgb(106, 250, 224);">Username:</label>
		<input type="text" id="username" name="username" required>

        <label for="email" style="color: rgb(106, 250, 224);">Email:</label>
		<label style="color: red">*email should contain @</label>
		<input type="text" id="email" name="email" required>

		<label for="gender" style="color: rgb(106, 250, 224);">Gender:</label>
		<select id="role" name="gender">
			<option value="M">M</option>
			<option value="F">F</option>
		</select required>

		<label for="password" style="color:rgb(106, 250, 224)">Password:</label>
		<label style="color: red">*password length should be >= 8</label>
		<input type="password" id="password" name="password" required>

		<label for="address" style="color: rgb(106, 250, 224);">Address:</label>
		<input type="text" id="address" name="address" required>

		<label for="role" style="color: rgb(106, 250, 224);">Role:</label>
		<select id="role" name="role">
			<option value="admin">admin</option>
			<option value="customer">customer</option>
			<option value="manager">manager</option>
			<option value="member">member</option>
		</select required>

		<label for="dob" style="color: rgb(106, 250, 224);">Date Of Birth:</label>
		<input type="date" id="dob" name="dob" required>

        <input type="submit" value="Create User"  class="glow-button">
	<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
		  <div class="modal-content">
			<div class="modal-header">
			  <h5 class="modal-title" id="staticBackdropLabel">Please Enter valid info</h5>
			  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
			  information provided is either invalid or the values have not been entered
			</div>
			<div class="modal-footer">
			  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
			</div>
		  </div>
		</div>
	  </div>
    </form>

