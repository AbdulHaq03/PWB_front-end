		.my-div{
			
			column-count: 2;
			column-gap: 20px;
			width: 100%;
			align-self: center;
		}
        button {
			background-color:  #529e54;
            color: #afdf82;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
			margin-bottom: 5px;
			margin-top: 5px;
		}
		.glow-button {
  			background-color:#529e54 ;
			color: #fff;
			border: none;
			width: 75%;
			padding: 12px 24px;
			font-size: 16px;
			border-radius: 4px;
			animation: glow 1s ease-in-out infinite alternate;
			margin-left: 25px;
		}
		@keyframes glow {
				from {
					box-shadow: 0 0 0 0 rgba(99, 52, 219, 0.7);
				}
				to {
					box-shadow: 0 0 15px 2px rgba(106, 237, 158, 0.96);
				}
				}

		form {
			background-image: url("img3.jpg");
			padding: 20px;
			max-width: 50%;
			margin: 50px auto;
			border-radius: 25px;
			box-shadow: 0px 0px 500px rgba(45, 70, 63, 0.6);
		}
		input[type="text"],
		input[type="password"] {
			padding: 10px;
			margin: 10px 0;
			border-radius: 5px;
			border: none;
			box-shadow: 0px 0px 5px rgba(0,0,0,0.2);
			width: 100%;
			box-sizing: border-box;
			font-size: 16px;
		}
		input[type="submit"] {
			background-color: #529e54;
			color: #afdf82;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
			margin-top: 20px;
			margin-right: 100px;
		}
		input[type="submit"]:hover {
			background-color: #3e8e41;
		}
		.container{
			display: flex;
			align-items: center;
		}
		.other{
			flex:1;
		}
        li{
            color: aquamarine;
        }
        p{
            color: aquamarine;
        }
	</style>
</head>
